void merge1(long src1[], long src2[], long dst[], long n) {
  long i1;
  long i2;
  long id;

  while (i1 < n && i2 < n) {
    long v1 = src1[i1];
    long v2 = src2[i2];
    int take = v1 < v2;
    dst[id++] = take ? v1 : v2;
    i1 += take;
    i2 += (1 - take);
  }

  while (i1 < n) {
    dst[id++] = src1[i1++];
  }
  while (i2 < n) {
    dst[id++] = src2[i2++];
  }
}
